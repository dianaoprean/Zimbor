@model UI.Admin.Models.StudiuPiataModel
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jquery.unobtrusive-ajax")

<form role="form" id="edit-form">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Nume)
        @Html.TextBoxFor(m => m.Nume, new { @class = "form-control", @placeholder = "Nume" })
        @Html.ValidationMessageFor(m => m.Nume)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NrTuristi)
        @Html.TextBoxFor(m => m.NrTuristi, new { @class = "form-control", @placeholder = "NrTuristi" })
        @Html.ValidationMessageFor(m => m.NrTuristi)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataStudiu)
        @Html.TextBoxFor(m => m.DataStudiu, new { @class = "form-control", @placeholder = "DataStudiu" })
        @Html.ValidationMessageFor(m => m.DataStudiu)
    </div>
        <div class="form-group">
        @Html.LabelFor(m => m.Detalii)
        @Html.TextAreaFor(m => m.Detalii, new { @class = "form-control", @placeholder = "Detalii", @rows="4" })
        @Html.ValidationMessageFor(m => m.Detalii)
    </div>
</form>
